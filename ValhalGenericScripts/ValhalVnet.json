{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "resources": [
    {
      "name": "ValhalVnet",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [],
      "tags": {
        "displayName": "ValhalVnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('ValhalVnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('ValhalVnetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('ValhalVnetSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('ValhalVnetSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('ValhalVnetSubnet2Prefix')]"
            }
          },
          {
            "name": "[variables('ValhalVnetSubnet3Name')]",
            "properties": {
              "addressPrefix": "[variables('ValhalVnetSubnet3Prefix')]"
            }
          }
        ]
      }
    }
  ],
  "variables": {
    "ValhalVnetPrefix": "10.0.0.0/16",
    "ValhalVnetSubnet1Name": "Subnet-1",
    "ValhalVnetSubnet1Prefix": "10.0.1.0/24",
    "ValhalVnetSubnet2Name": "Subnet-2",
    "ValhalVnetSubnet2Prefix": "10.0.2.0/24",
    "ValhalVnetSubnet3Name": "AzureBastionSubnet",
    "ValhalVnetSubnet3Prefix": "10.0.0.0/26"
  }
}
